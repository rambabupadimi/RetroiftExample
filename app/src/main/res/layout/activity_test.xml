<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pccs_0007.youtubetest.TestActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="Title "
         android:id="@+id/title"
         app:layout_constraintLeft_toRightOf="@+id/image"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>

     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="Description is sample description fdgdfgdfgdgfdgdgdgdfgfdgdfgfdgdgdgdgdfgdfgdgdgdfggfgfdfdfgfgfgfgfdfdfgfgdfdfdfdfdfddfgfgffgfggdgdgdgggggggggggdgdabout fdsfsdfsdfsfsfsf ddfgdfgdfgdfgdfgdgdgdgdgdgdgdgdfdfandroid application "
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/title"
         app:layout_constraintLeft_toRightOf="@+id/image"
         android:id="@+id/description"
         />

     <Button
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@+id/description"
         app:layout_constraintLeft_toLeftOf="@id/description"
         android:text="Sample"/>

</android.support.constraint.ConstraintLayout>
